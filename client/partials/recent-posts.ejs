<!-- /partials/recent-posts.ejs -->
<% if (recentPosts && recentPosts.length > 0) { %>
    <div class="flex flex-col items-center w-full">
        <% recentPosts.forEach(post => { %>
            <div class="bg-gray-800 p-4 my-4 rounded-md shadow-md w-3/4 text-white">
                <!-- Make the post title clickable and redirect to the post view page -->
                <a href="/post/view/<%= post._id %>" class="text-blue-400 underline font-bold text-xl mb-2"><%= post.title %></a>
                <p class="text-gray-300 mb-2">Posted by <%= post.author.username %> in 
                    <!-- Link to the community view page -->
                    <a href="/community/<%= post.community._id %>" class="text-blue-400 underline"><%= post.community.name %></a>
                </p>
                <p class="text-gray-200 mb-2"><%= post.content %></p>
                <p class="text-gray-300">Posted on <%= post.createdAt.toDateString() %></p>
            </div>
        <% }) %>
    </div>
    
<% } else { %>
    <p class="text-gray-600 text-center my-4">No recent posts found.</p>
<% } %>
