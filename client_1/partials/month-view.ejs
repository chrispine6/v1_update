<div class="month-view-container bg-gray-800 text-white">
    <table class="min-w-full divide-y divide-gray-600">
        <thead class="bg-gray-700">
            <tr>
                <% ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'].forEach(day => { %>
                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium uppercase tracking-wider">
                        <%= day %>
                    </th>
                <% }) %>
            </tr>
        </thead>
        <tbody class="bg-gray-900 divide-y divide-gray-600">
            <% 
            // Assuming startingDay is the day of week the month starts on (0 for Sunday, 6 for Saturday)
            // and daysInMonth is the total number of days in the month
            let startingDay = new Date().getDay(); // Placeholder for actual start day of month
            let daysInMonth = 31; // Placeholder for actual days in month
            let dayCounter = 1;
            for (let row = 0; row < 6; row++) { %>
                <tr>
                    <% for (let col = 0; col < 7; col++) { 
                        if (row === 0 && col < startingDay || dayCounter > daysInMonth) { %>
                            <td class="px-6 py-4 whitespace-nowrap text-center">-</td>
                        <% } else { %>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <%= dayCounter++ %>
                                <!-- Placeholder for events, adjust as needed -->
                            </td>
                        <% } 
                    } %>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
